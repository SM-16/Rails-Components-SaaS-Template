<section class="relative py-24 overflow-hidden">
  <!-- Background decoration -->
  <div class="absolute inset-0 -z-10">
    <div class="absolute inset-0 bg-gradient-to-b from-slate-50/50 to-white/95"></div>
    <div class="absolute w-[500px] h-[500px] -right-48 -top-48 bg-rose-100 rounded-full blur-3xl opacity-20"></div>
    <div class="absolute w-[500px] h-[500px] -left-48 -bottom-48 bg-slate-100 rounded-full blur-3xl opacity-20"></div>
  </div>

  <div class="container mx-auto px-4 flex flex-col items-center text-center">
    <!-- Logo with animation -->
    <div class="mb-8 animate-float">
      <%= image_tag("/icon(17).png", 
        class: "w-[80px] hover:scale-110 transition-transform duration-300",
        alt: "Rails Elements logo", 
        loading: "lazy")
      %>
    </div>

    <div class="max-w-3xl mx-auto mb-12">
      <h2 class="text-4xl md:text-5xl font-bold text-slate-900 mb-6 leading-tight">
        Save <span class="text-rose-600">100+ hours</span> on your projects
      </h2>
      <p class="text-lg text-slate-600 max-w-xl mx-auto mb-10">
        Rails Components is a Ruby on Rails UI library for developers who want to build beautiful applications faster and more efficiently.
      </p>

      <!-- CTA Button -->
      <% if user_signed_in? %>
        <%= button_to stripe_starter_checkout_path,
          class: "inline-flex items-center gap-3 px-6 py-4 text-base font-semibold text-white bg-gradient-to-r from-rose-600 to-rose-500 rounded-xl shadow-lg shadow-rose-500/20 hover:shadow-rose-500/30 hover:-translate-y-0.5 transition-all duration-300 group" do %>
          Design 2x faster
          <svg class="w-5 h-5 group-hover:rotate-180 transition-all duration-300" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M2 17 17 2"/><path d="m2 14 8 8"/><path d="m5 11 8 8"/>
            <path d="m8 8 8 8"/><path d="m11 5 8 8"/><path d="m14 2 8 8"/>
            <path d="M7 22 22 7"/>
          </svg>
        <% end %>
      <% else %>
        <%= link_to new_user_session_path,
          class: "inline-flex items-center gap-3 px-6 py-4 text-base font-semibold text-white bg-gradient-to-r from-rose-600 to-rose-500 rounded-xl shadow-lg shadow-rose-500/20 hover:shadow-rose-500/30 hover:-translate-y-0.5 transition-all duration-300 group" do %>
          Design 2x faster
          <svg class="w-5 h-5 group-hover:rotate-180 transition-all duration-300" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M2 17 17 2"/><path d="m2 14 8 8"/><path d="m5 11 8 8"/>
            <path d="m8 8 8 8"/><path d="m11 5 8 8"/><path d="m14 2 8 8"/>
            <path d="M7 22 22 7"/>
          </svg>
        <% end %>
      <% end %>
    </div>
  </div>
</section>

<style>
  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }
  .animate-float {
    animation: float 3s ease-in-out infinite;
  }
</style>